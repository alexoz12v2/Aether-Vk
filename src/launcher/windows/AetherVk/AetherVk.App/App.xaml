<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="AetherVk.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AetherVk.App"
    xmlns:media="using:Microsoft.UI.Xaml.Media">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

                <ResourceDictionary Source="ms-appx:///Resources/Spacing.xaml" />
                <ResourceDictionary Source="ms-appx:///Resources/Glyph.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F0E1E1E1" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F01E1E1E" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!-- Constants for responsiveness -->
            <x:Double x:Key="PageBreakpoint620">620</x:Double>
            <x:Double x:Key="PageBreakpoint920">920</x:Double>
            <x:Double x:Key="PageBreakpoint1260">1260</x:Double>
            <x:Double x:Key="PageBreakpoint1920">1920</x:Double>

            <!-- Brushes: TODO If needed move to ThemeDictionaries -->
            <media:AcrylicBrush x:Key="AcrylicBrushBlurred" TintOpacity="0.8" TintColor="#FF000000" FallbackColor="#FF000000" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
